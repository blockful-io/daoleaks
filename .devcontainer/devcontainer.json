{
    "name": "Ubuntu Development Environment",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    
    // Configure tool-specific properties
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.defaultProfile.linux": "bash"
        },
        "extensions": [
          "ms-vscode.vscode-json",
          "ms-python.python",
          "ms-vscode.cpptools"
        ]
      }
    },
  
    // Set container features
    "features": {
      "ghcr.io/devcontainers/features/common-utils:2": {
        "installZsh": true,
        "configureZshAsDefaultShell": false,
        "installOhMyZsh": true,
        "upgradePackages": true
      },
      "ghcr.io/devcontainers/features/git:1": {
        "ppa": true,
        "version": "latest"
      },
      "ghcr.io/devcontainers/features/node:1": {
        "nodeGypDependencies": true,
        "version": "lts"
      },
      "ghcr.io/devcontainers/features/python:1": {
        "version": "3.11"
      }
    },
  
    // Forward ports - add any ports your app uses
    "forwardPorts": [3000, 8000, 8080],
  
    // Use 'postCreateCommand' to run commands after the container is created
    "postCreateCommand": "sudo apt-get update && sudo apt-get upgrade -y",
  
    // Use 'postStartCommand' to run commands after the container starts
    // "postStartCommand": "",
  
    // Configure container user
    "remoteUser": "vscode",
  
    // // Mount the local filesystem
    // "mounts": [
    //   "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind"
    // ],
  
    // Configure container environment
    "containerEnv": {
      "WORKSPACE_FOLDER": "${containerWorkspaceFolder}"
    },
  
    // Lifecycle scripts
    "onCreateCommand": {
      "setup": "echo 'Container created successfully!'"
    }
  }